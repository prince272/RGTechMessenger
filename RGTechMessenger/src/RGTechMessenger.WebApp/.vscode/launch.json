{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: HTTP",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Next.js: HTTPS",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev:ssl",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    }
  ]
}
